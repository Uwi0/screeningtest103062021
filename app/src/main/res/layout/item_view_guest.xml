<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/rl_guest"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <ImageView
           android:id="@+id/iv_guest"
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:contentDescription="@string/image_guest" />
       <TextView
           android:id="@+id/tv_guest"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_alignTop="@id/iv_guest"
           android:layout_alignBottom="@id/iv_guest"
           android:layout_alignStart="@id/iv_guest"
           android:layout_alignEnd="@id/iv_guest"
           android:gravity="center"
           android:textSize="15dp"
           tools:text="uwi"/>
   </RelativeLayout>

</androidx.cardview.widget.CardView>